    <%- include ('../partials/header'); %>
    <link rel="stylesheet" href="/css/chatStyle.css">
    <script src="/resources/js/chat.js"> </script>
    <title>Chat</title>
    <!--Body of Website-->
        <div class="conatiner" id="chat-body">
          <div class="row">
            <div class="col-3" id="chat-select-container">
              <div class="row">
                <div class=chat-search>
                  <input type="text" placeholder="Search">
                  <button class="btn btn-light" onclick="search()"> Search </button>
                </div>
              </div>
              <form action="/chat/select_chat" method="POST">
                <div class="chat-select-scroll-box">
                  <ul class="chat-select">
                    <!--Placeholder chat until javascript is working-->
                    <li class="chats">
                      <div class="chat-pic">
                        <input type="image" name="submit" src="/img/default_profile_pic.jpg" alt="Profile Pic"></input>
                      </div>
                      <p class="name">
                        <button type="submit" name="submit" value="1">Test User 1</button>
                      </p>
                    </li>
                    <li class="chats">
                      <div class="chat-pic">
                        <input type="image" name="submit" src="/img/default_profile_pic.jpg" alt="Profile Pic"></input>
                      </div>
                      <p class="name">
                        <button type="submit" name="submit" value="2">Test User 2</button>
                      </p>
                    </li>
                  </ul>
                </div>
              </form>
            </div>
            <!--End of chat-select-->
            <!--Start of chatbox-->
            <div class="col-8">
              <div class="row">
                <div class="selected-chat">
                  <span>To: <span class="name">Test User 1</span></span>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <div class="chat-scroll-box">
                    <ul class="chat-box" >
                      <!--Received message template-->
                      <%
                      if(chat_messages){
                        msg = '';
                        for(let i = 0; i < chat_messages.length; i++){
                          if(chat_messages[i].user_id == 1){
                            msg += '<div class="row"><li class="chat-sent"><div class="user-pic">' +
                              '<img src="/img/default_profile_pic.jpg" alt "Profile Pic" onclick="openProfile();"></div>' +
                              '<div class="chat-text">' + chat_messages[i].line_text + '</div>' +
                              '<div class="chat-time">' + chat_messages[i].createdAt.toLocaleTimeString() +'</div></li></div>';
                          }
                          else {
                              msg += '<li class="chat-received"><div class="user-pic">' +
                                '<img src="/img/default_profile_pic.jpg" alt "Profile Pic" onclick="openProfile();"></div>' +
                                '<div class="chat-text">' + chat_messages[i].line_text + '</div>' +
                                '<div class="chat-time">' + chat_messages[i].createdAt.toLocaleTimeString() +'</div></li>';
                          }
                        }
                        %>
                      <%- msg %>
                      <% } %>
                    </ul>
                  </div>

                  <!--Script to submit chat message upon pressing enter key"-->
                  <script>
                    function pressed(e){
                      if ((window.event ? event.keyCode : e.which)==13 && (window.event ? event.keyCode : e.which)!=e.shiftKey){
                        document.forms["message-submit"].submit();
                        event.target.value = "";
                        var chat = document.getElementById('chat-scroll-box');
                        chat.scrollTop = chat.scrollHeight; //Should make chat scroll to bottom after submitting but doesn't
                      }
                    }
                  </script>

                  <form name="message-submit" action="/chat/send_message" method="POST">
                    <div class="chat-input mt-auto mb-0">
                      <textarea name="message" onkeydown="pressed(event)" class="form-control" rows="3" placeholder="Type your message here..."></textarea>
                      <%
                      if(chat_messages){
                        chat_id = '<input name="chat_id" type="hidden" value=' + chat_messages[0].chat_id + '>';
                        %>
                      <%- chat_id %>
                      <% }
                      else{
                        chat_id = '<input name="chat_id" type="hidden" value=0>';
                        %>
                      <%- chat_id %>
                      <% } %>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <!--End of chatbox-->
          </div>
        </div>
        <%- include ('../partials/footer'); %>
