    <%- include ('../partials/header'); %>
    <title>Ride Search</title>
  </head>
  <body>
    <div style="position: absolute;  top: 25vh; left: 29vw;">
      <div id="search_ui">
        <h1 class="text-center" style="padding: 20px">Ride Search</h1>
        <form method="POST" action="/rides/search">
          <div class="row" id="field_labels">
              <div class="col">
                Trip start date
              </div>
              <div class="col">
                Trip end date
              </div>
              <div class="col">
                Origin
              </div>
              <div class="col">
                Destination
              </div>
          </div>
          <div class="row" id="fields">
            <div class="col">
              <input type='date' name="start_date" class="form-control" id='start_date' style='width: 10vw;'>
            </div>
            <div class="col">
              <input type='date' name="end_date" class="form-control" id='end_date' style='width: 10vw;'>
            </div>
            <div class="col">
              <input type='text' name="origin" class="form-control" style='width: 10vw;'>
            </div>
            <div class="col">
              <input type='text' name="destination" class="form-control" style='width: 10vw;'>
            </div>
          </div>
          <div class="row text-center">
            <div class="col">
              <button type="submit" name="button" style="margin: 20px 0px; width: 20vw">Submit</button>
            </div>
          </div>
        </form>
      </div>
      <div id="results" style="visibility: hidden">
        <h2 class="text-center" style="padding: 0px">Groups</h2>
        <div id="group_results" class="row">
          <div class="col">
            Start
          </div>
          <div class="col">
            End
          </div>
          <div class="col">
            Origin
          </div>
          <div class="col">
            Destination
          </div>
          <div class="col">
            # Travellers
          </div>
        </div>
        <h2 class="text-center" style="padding: 20px">Individuals</h3>
        <div id="individual_results" class="row">
          <div class="col">
            Start
          </div>
          <div class="col">
            End
          </div>
          <div class="col">
            Origin
          </div>
          <div class="col">
            Destination
          </div>
        </div>
      </div>
    </div>
    <%- include ('../partials/footer'); %>
